# OMANI-Therapist-Voice Environment Configuration

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/omani_therapist
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws

# HIPAA Compliance
HIPAA_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=30
EMERGENCY_CONTACT_REQUIRED=true

# Performance Settings
MAX_CONCURRENT_CONVERSATIONS=100
CONVERSATION_TIMEOUT_SECONDS=1800
MAX_AUDIO_DURATION_SECONDS=60

# Cultural Adaptation
OMANI_DIALECT_MODEL=omani-arabic-v1
CULTURAL_CONTEXT_PROMPT=You are a culturally sensitive mental health counselor specializing in Omani Arabic dialect.

# Crisis Intervention
CRISIS_HOTLINE_NUMBER=8000-4444
EMERGENCY_ESCALATION_ENABLED=true
PROFESSIONAL_SUPERVISION_REQUIRED=true

# Monitoring and Logging
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Development Settings (set to false in production)
DEBUG_MODE=false
DEVELOPMENT_MODE=false
